{
    "globals": {
        "require": true,
        "module": true,
        "exports": true,
        "setTimeout": true
    },

    "rules": {
        "no-underscore-dangle": 0,

        "global-strict": [2, "always"],
        "quotes": [2, "single"],
        "strict": [2, "global"],

        "space-in-parens": [2, "never"],
        "indent": [2, 2],
        "linebreak-style": [2, "unix"]
    }
}
